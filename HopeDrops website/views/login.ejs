    <title> Login</title>

    <script>
      function validateEmail() {
          var emailInput = document.getElementById('Email');
          var emailValue = emailInput.value;

          // Define the allowed email domains
          var allowedDomains = ['@gmail', '@hotmail', '@icloud'];

          // Check if the email contains any of the allowed domains
          var isValid = allowedDomains.some(function(domain) {
              return emailValue.includes(domain);
          });

          // Display an error message if the email is not valid
          if (!isValid) {
              alert('Invalid email address. Please use a valid email domain: @gmail, @hotmail, @icloud');
              return false;
          }

          // If the email is valid, you can proceed with the form submission or any other action
          return true;
      }
  </script>




  </head>
